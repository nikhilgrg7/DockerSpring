pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage('Build Maven') {
            steps {
                checkout scm
                bat 'mvn clean install'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    bat 'docker build -t nikhilgrg7884/docker-jenkins-integration-sample .'
                }
            }
        }
        stage('Run Container') {
            steps {
                script {
                    bat 'docker run -d -p 8080:8080 --name my-container nikhilgrg7884/docker-jenkins-integration-sample'
                }
            }
        }
    }
}
